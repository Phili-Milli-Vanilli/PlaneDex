generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PlaneCard {
  id            Int     @id @default(autoincrement())
  planeModelId  Int
  regristration String?
  airline       String?

  // 1 zu 1 
  PlaneModel PlaneModel @relation(fields: [planeModelId], references: [id])
}

model PlaneModel {
  id    Int     @id @default(autoincrement())
  icao  String  @unique
  model String?

  // R체ckw채rtsbeziehung f체r sp채ter vielleicht wichtig
  PlaneCards PlaneCard[]
}
